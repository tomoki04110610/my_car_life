<div class="container">
  <div class="row">
    <h1>ユーザー詳細画面</h1>
  </div>

  <div class="row">
    <div class="col">
      <h5>プロフィール画像</h5>
      <%= image_tag @user.get_profile_image(200, 200) %>

      <h5>ニックネーム</h5>
      <p><%= @user.nickname %></p>
    </div>

    <div class="col">
      <h5>車種</h5>
      <% @user.car_models.each do |car_model| %>
          <p><%= car_model.name %></p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <h5>投稿一覧</h5>
  </div>

  <div class="row">
    <% @user.posts.each do |post| %>
      <div class="col-3 d-flex">
         <div class="card" style="width: 18rem;">
          <% if post.post_image.present? %>
            <%= image_tag post.post_image, class: "bd-placeholder-img card-img-top", width: "100%", height: "180", xmlns: "http://www.w3.org/2000/svg", preserveAspectRatio: "xMidYMid slice", focusable: "false", role: "img", "aria-label": "Placeholder: Image cap" %>
          <% else %>
            <%= image_tag "placeholder.png", class: "bd-placeholder-img card-img-top", width: "100%", height: "180", xmlns: "http://www.w3.org/2000/svg", preserveAspectRatio: "xMidYMid slice", focusable: "false", role: "img", "aria-label": "Placeholder: Image cap" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text">
              <% max_length = 50 %>
              <% truncated_body = post.body.truncate(max_length, omission: '...') %>
              <p><%= truncated_body %></p>
            </p>
            <h5>ジャンル</h5>
            <p><%= post.genre.genre_name %></p>
            <h5>ニックネーム</h5>
            <p><%= post.user.nickname %></p>
            <%= link_to "詳細を見る", post_path(post), class: "btn btn-info" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

    <%= link_to "戻る", users_path, class: "btn btn-dark" %>

</div>