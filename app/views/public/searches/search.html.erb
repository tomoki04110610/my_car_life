<div class="container">
  <% if @model == 'user' %>
    <div class="row justify-content-center">
      <div class="col-lg-4 col-sm-6 text-center mt-2">
        <h3>ユーザー検索 "<%= @content %>"</h3>
      </div>
    </div>

    <div class="row">
      <% @records.each do |record| %>
        <div class="col-lg-3 col-md-6 col-sm-12 d-flex my-2">
          <div class="card align-items-stretch" style="width: 18rem;">
            <% if record.profile_image.present? %>
              <%= image_tag record.profile_image, class: "bd-placeholder-img card-img-top", width: "100%", height: "180", xmlns: "http://www.w3.org/2000/svg", preserveAspectRatio: "xMidYMid slice", focusable: "false", role: "img", "aria-label": "Placeholder: Image cap" %>
            <% else %>
              <%= image_tag "no_image.jpg", class: "bd-placeholder-img card-img-top", width: "100%", height: "180", xmlns: "http://www.w3.org/2000/svg", preserveAspectRatio: "xMidYMid slice", focusable: "false", role: "img", "aria-label": "Placeholder: Image cap" %>
            <% end %>
            <div class="card-body text-secondary">
              <p><%= record.nickname %></p>
              <span>
                <%= link_to "ユーザー詳細へ", user_path(record.id), class: "btn btn-info" %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="pagination justify-content-center my-2">
      <%= paginate @records %>
    </div>
  <% elsif @model == 'post' %>
    <div class="row justify-content-center">
      <div class="col-lg-4 col-sm-6 text-center mt-2">
        <h3>投稿検索 "<%= @content %>"</h3>
      </div>
    </div>

    <div class="row">
      <% @records.each do |record| %>
        <div class="col-lg-3 col-md-6 col-sm-12 d-flex my-2">
          <div class="card align-items-stretch" style="width: 18rem;">
            <% if record.post_image.present? %>
              <%= image_tag record.post_image, class: "bd-placeholder-img card-img-top", width: "100%", height: "180", xmlns: "http://www.w3.org/2000/svg", preserveAspectRatio: "xMidYMid slice", focusable: "false", role: "img", "aria-label": "Placeholder: Image cap" %>
            <% else %>
              <%= image_tag "no_image.jpg", class: "bd-placeholder-img card-img-top", width: "100%", height: "180", xmlns: "http://www.w3.org/2000/svg", preserveAspectRatio: "xMidYMid slice", focusable: "false", role: "img", "aria-label": "Placeholder: Image cap" %>
            <% end %>
            <div class="card-body text-secondary">
              <h5 class="card-title"><%= record.title %></h5>
              <p class="card-text">
                <% max_length = 50 %>
                <% truncated_body = record.body.truncate(max_length, omission: '...') %>
                <p><%= truncated_body %></p>
              </p>
              <h5>ジャンル</h5>
              <p><%= record.genre.genre_name %></p>
              <h5>ニックネーム</h5>
              <p><%= record.user.nickname %></p>
              <span>
                <%= link_to "投稿詳細へ", post_path(record.id), class: "btn btn-info" %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="pagination justify-content-center my-2">
      <%= paginate @records %>
    </div>
  <% end %>
</div>