<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 text-center">
      <h1>フォロワーユーザー一覧</h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <% if @users.exists? %>
      <% @users.each do |user| %>
        <div class="col-12 text-center d-flex justify-content-around">
          <p><%= image_tag user.get_profile_image(50,50) %></p>
          <p><%= user.nickname %></p>
          <%= link_to "ユーザー詳細ページへ", user_path(user), class: "btn btn-info btn-sm" %>
        </div>
      <% end %>
    <% else %>
      <div class="col-12 text-center">フォローしているユーザーはいません</div>
    <% end %>
  </div>
</div>