<!DOCTYPE html>
<html>
  <head>
    <title>MyCarLife</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/eea0cb5b59.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex">
          <div class="container d-flex">

            <span class="navbar-brand">
              <%= link_to "My Car Life", root_path,class: "nav-link text-light" %>
            </span>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav text-right">
                <li class="nav-item">
                  <%= link_to mypage_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-house-user"></i>マイページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_car_model_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-car"></i>車種登録
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to posts_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-list"></i>投稿一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to users_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-users"></i>ユーザー一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to root_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i>トップページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to about_path,class: "nav-link text-light" do %>
                    <i class="fa-solid fa-info"></i>アバウトページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-right-from-bracket"></i>ログアウト
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <% else %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex">
          <div class="container d-flex">

            <span class="navbar-brand">
              <%= link_to "My Car Life", root_path,class: "nav-link text-light" %>
            </span>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav text-right">
                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-user-plus"></i>新規登録
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-right-to-bracket"></i>ログイン
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i>トップページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to about_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-info"></i>アバウトページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to users_guest_sign_in_path, method: :post, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-arrow-right-to-bracket"></i>ゲストログイン（閲覧用）
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <% end %>
    </header>
    <main class="d-flex">
      <% flash.each do |message_type, message| %>
        <div class = "flash-message <%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
