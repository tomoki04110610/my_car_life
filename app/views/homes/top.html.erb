<h2>最新の投稿</h2>

<% @posts.each do |post| %>
  <h4>タイトル</h4>
  <p><%= post.title %></p>
  <h4>本文</h4>
  <p><%= post.body %></p>
  <h4>ニックネーム</h4>
  <p><%= post.user.nickname %></p>
  <button type="button" class="btn btn-outline-info">
    <%= link_to "詳細を見る", post_path(post) %>
  </button>
<% end %>
