<h1>新規投稿</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, prompt: "ジャンルを選択してください" %>

  <%= f.submit '投稿'%>
<% end %>