<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2>新規投稿</h2>
    </div>

    <% if @post.errors.any? %>
      <%= @post.errors.count %>件のエラーが発生しました
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="row">
      <%= form_with model: @post do |f| %>
      <div class="col-12">
        <h4>タイトル</h4>
        <%= f.text_field :title %>
      </div>
      <div class="col-12">
        <h4>本文</h4>
        <%= f.text_area :body %>
      </div>
      <div class="col-12">
        <h4>ジャンル</h4>
        <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, prompt: "ジャンルを選択してください" %>
      </div>
      <div class="col-12">
        <h4>画像</h4>
        <%= f.file_field :post_image, accept: "image/*" %>
      </div>
      <div class="col-12 my-2">
        <%= f.submit '投稿' , class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>