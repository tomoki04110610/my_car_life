<h1>投稿編集画面</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>

  <h4>画像</h4>
  <%= f.file_field :post_image, accept: "image/*" %>

  <%= f.submit '更新' %>

<% end %>
<%= link_to "戻る", post_path(@post.id) %>

