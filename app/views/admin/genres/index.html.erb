<div class="container">
  <div class="row d-flex justify-content-center text-center mb-2">
    <div class="col-12">
      <h2>ジャンル一覧</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-6 col-sm-12">
      <table class="table table-striped table-bordered text-center mx-auto">
        <thead>
          <tr>
            <th>ID</th>
            <th>ジャンル名</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.id %></td>
              <td><%= genre.genre_name %></td>
              <td>
                <% unless [1, 2, 3].include?(genre.id) %>
                  <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn btn-danger btn-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-6 col-sm-12">
      <%= render "admin/genres/new", genre: @genre %>
    </div>
  </div>
</div>
