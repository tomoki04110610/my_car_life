<div class="container">
  <div class="row d-flex justify-content-center text-center">
    <div class="col-12 mt-2">
      <h1>投稿一覧</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table table-striped table-bordered text-center mt-4 bg-light text-muted">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>コメント数</th>
            <th>詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.post_comments.count %></td>
              <td>
                <%= link_to "詳細ページへ", admin_post_path(post.id), class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>